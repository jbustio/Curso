<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_property_offers">
        <t t-foreach="docs" t-as="property">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>
                            <span t-field="property.name" />
                        </h2>
                        <div name="expected_price">
                            <strong>Expected Price: </strong>
                            <span t-field="property.expected_price" />
                        </div>
                        <div name="salesperson">
                            <strong>Salesman: </strong>
                            <span t-field="property.salesperson_id.name" />
                        </div>
                        <div name="status">
                            <strong>Status: </strong>
                            <span t-field="property.state" />
                        </div>
                        <t t-set="offers" t-value="property.mapped('offer_ids')" />
                        <t t-if="offers">
                            <t t-call="estate.estate_offers_table">
                                <t t-set="offers" t-value="offers" />
                            </t>
                        </t>
                        <t t-else="offers">
                            <div class="alert alert-warning">
                                <strong>
                                    Sorry, no offers yet.
                                </strong>
                            </div>

                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>
    <template id="report_property_offers_user">
        <t t-foreach="docs" t-as="user">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>
                            <strong>Salesman: </strong>
                            <span t-field="user.name" />
                        </h2>
                        <t t-set="properties" t-value="user.mapped('property_ids')" />
                        <t t-foreach="properties" t-as="property">
                            <h3><span t-field="property.name" /></h3>
                            <div name="expected_price">
                                <strong>Expected Price: </strong>
                                <span t-field="property.expected_price" />
                            </div>
                            <div name="status">
                                <strong>Status: </strong>
                                <span t-field="property.state" />
                            </div>
                            <t t-set="offers" t-value="property.mapped('offer_ids')" />
                            <t t-if="offers">
                                <t t-call="estate.estate_offers_table">
                                    <t t-set="offers" t-value="offers" />
                                </t>
                            </t>
                            <t t-else="offers">
                                <div class="alert alert-warning">
                                    <strong>
                                        Sorry, no offers yet.
                                    </strong>
                                </div>
                            </t>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>
    <template id="estate_offers_table">
        <table class="table">
            <thead>
                <tr>
                    <th>Price</th>

                    <th>Partner</th>

                    <th>Validity(days)</th>

                    <th>Deadline</th>

                    <th>State</th>
                </tr>
            </thead>
            <tbody>
                <tr t-foreach="offers" t-as="offer">
                    <td>
                        <span t-field="offer.price" />
                    </td>
                    <td>
                        <span t-field="offer.partner_id.name" />
                    </td>
                    <td>
                        <span t-field="offer.validity" />
                    </td>
                    <td>
                        <span t-field="offer.date_deadline" />
                    </td>
                    <td>
                        <span t-field="offer.status" />
                    </td>
                </tr>
            </tbody>
        </table>
    </template>
</odoo>