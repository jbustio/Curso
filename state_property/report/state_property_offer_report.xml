<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_report_estate_property" model="ir.actions.report">
        <field name="name">Property Offers</field>
        <field name="model">state_property.state_property</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">state_property.report_property</field>
        <field name="report_file">state_property.report_property</field>
        <field name="print_report_name">'Property Offers'</field>
        <field name="binding_model_id" ref="model_state_property_state_property"/>
    </record>

    <!-- Main report templates -->
    <template id="report_property">
        <t t-foreach="docs" t-as="property">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>
                            <span t-field="property.name"/>
                        </h2>
                        <div>
                            <strong>Salesman: </strong>
                            <span t-field="property.user_id"/>
                        </div>
                        <t t-call="property.state_property_offer_id"/>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>