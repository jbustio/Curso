<odoo>
    <data>
        <record id="ch_recruitment_hr_employee_form" model="ir.ui.view">
            <field name="name">ch_recruitment.hr.employee.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <!-- find field description and add the field
                     new_field after it -->
                <xpath expr="//field[@name='phone']" position="before">
                    <field name="ci"/>
                    <field name="age"/>
                    <field name="sex"/>
                </xpath>

            </field>
        </record>
    </data>
</odoo>