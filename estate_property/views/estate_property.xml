<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_estate_property" model="ir.actions.act_window">
        <field name="name">Estate Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
    </record>

        <menuitem
        id="estate_property_menu"
        groups="base.group_user"
        name="Real State"
        action = "action_estate_property"
        sequence="0"/>


        <record id="property_estate_view_form" model="ir.ui.view">
            <field name="name">property_estate.view.form</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <form string="Property">
                    <header>
                        <button 
                            name="action_cancel" 
                            type="object" 
                            string="Cancel"
                            states="New,Offer Received,Offer Refused,Offer Accepted"
                            />
                        <button 
                            name="action_sold" 
                            type="object" 
                            string="Sold"
                            states="New,Offer Received,Offer Refused,Offer Accepted"
                            />
                        <field name="state"  widget="statusbar"/> 
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"></field> 
                                <field name="expected_price"></field>
                                <field name="selling_price"></field>
                            </group>
                            <group>
                                <field name="postcode"></field>
                                <field name="date_availability"></field>
                                <field name="active"></field>
                            </group>
                        </group>
                        <group>
                            <notebook>
                                <page name="page1" string="Description">
                                    <group>
                                        <field name="description"></field> 
                                        <field name="property_type_id"></field>
                                        <field name="property_tag_ids" widget = "many2many_tags"></field>
                                        <field name="state"></field>
                                    </group>
                                </page>
                                <page name="page2" string="House Properties">
                                        <group> 
                                        <field name="total_area"></field>
                                        <field name="bedrooms" string = "Bedrooms"></field>
                                        <field name="living_area"></field>
                                        <field name="facades"></field>
                                        <field name="garage"></field>
                                        <field name="garden"></field>
                                        <field name="garden_area" attrs="{'invisible': [('garden', '=', False)]}"/>
                                        <field name="garden_orientation" attrs="{'invisible': [('garden', '=', False)]}"/>
                                        </group>
                                </page>
                                <page name="page3" string="Offers">
                                    <group>
                                        <field name="best_price"></field>
                                        <field name="offer"></field> 
                                    </group>
                                </page>
                                <page name="page4" string="Other Info">
                                    <group>
                                        <field name="sales_person"></field> 
                                        <field name="buyer"></field>
                                    </group>
                                </page>
                            </notebook>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="property_estate_view_tree" model="ir.ui.view">
            <field name="name">property_estate.view.tree</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="name"></field>
                    <field name="description"></field>
                    <field name="expected_price"></field>
                    <field name="property_type_id"></field>
                    <field name="property_tag_ids" widget = "many2many_tags"></field>
                </tree>
            </field>
        </record>

        <record id="property_estate_view_search" model="ir.ui.view">
            <field name="name">property_estate.view.search</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <search string="">
                    <field name="name"></field>
                    <field name="expected_price"></field>
                    <field name="description"></field>
                    <field name="property_type_id"></field>
                    <field name="property_tag_ids" widget = "many2many_tags"></field>
                    
                </search>
            </field>
        </record>

</odoo>
