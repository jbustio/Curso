<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_estate_property" model="ir.actions.act_window">
        <field name="name">Estate Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{"search_default_available":1}</field>
    </record>

        <menuitem
        id="estate_property_menu"
        groups="base.group_user"
        name="Real State"
        action = "action_estate_property"
        sequence="0"/>


        <record id="property_estate_view_form" model="ir.ui.view">
            <field name="name">property_estate.view.form</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <form string="Property">
                    <header>
                        <button 
                            name="action_cancel" 
                            type="object" 
                            string="Cancel"
                            states="New,Offer Received,Offer Refused,Offer Accepted"
                            />
                        <button 
                            name="action_sold" 
                            type="object" 
                            string="Sold"
                            states="Offer Accepted"
                            />
                        <field name="state"  widget="statusbar" statusbar_visible="new,offer_received,offer_accepted,sold"/> 
                    </header>
                    <sheet>
                    <div class="oe_title"> 
                        <h1>
                            <field name="name"/>
                        </h1>
                        <field name="property_tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                    </div>
                        <group>
                            <group>
                                <field name="expected_price"></field>
                                <field name="selling_price"></field>
                                <field name="best_price"></field>

                            </group>
                            <group>
                                <field name="postcode"></field>
                                <field name="date_availability"></field>
                                <field name="property_type_id" options="{'no_create': True, 'no_edit': True}"/>
                                
                            </group>
                        </group>
                        <group>
                            <notebook>
                                <page name="page1" string="Description">
                                    <group>
                                        <field name="description"></field> 
                                        <field name="property_type_id"></field>
                                        <field name="state"></field>
                                    </group>
                                </page>
                                <page name="page2" string="House Properties">
                                        <group> 
                                        <field name="active"></field>
                                        <field name="total_area"></field>
                                        <field name="bedrooms" string = "Bedrooms"></field>
                                        <field name="living_area"></field>
                                        <field name="facades"></field>
                                        <field name="garage"></field>
                                        <field name="garden"></field>
                                        <field name="garden_area" attrs="{'invisible': [('garden', '=', False)]}"/>
                                        <field name="garden_orientation" attrs="{'invisible': [('garden', '=', False)]}"/>
                                        </group>
                                </page>
                                <page name="page3" string="Offers">
                                    <group>
                                        
                                        <field name="offer" attrs="{'readonly': [('state','in', ['Offer Accepted', 'Sold', 'Canceled'])]}"/>
                                    </group>
                                </page>
                                <page name="page4" string="Other Info">
                                    <group>
                                        <field name="sales_person"></field> 
                                        <field name="buyer"></field>
                                    </group>
                                </page>
                            </notebook>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="property_estate_view_tree" model="ir.ui.view">
            <field name="name">property_estate.view.tree</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <tree string="Properties" decoration-success="state in ('Offer Received','Offer Accepted')" decoration-bf="state == 'Offer accepted'" decoration-muted="state == 'Sold'">
            
                    <field name="name"></field>
                    <field name="description"></field>
                    <field name="expected_price"></field>
                    <field name="date_availability" optional="1"/>
                    <field name="state"></field>
                    <field name="total_area"></field>
                    <field name="bedrooms" string = "Bedrooms"></field>
                    <field name="living_area"></field>
                    <field name="facades"></field>
                    <field name="garage"></field>
                    <field name="garden"></field>
                    <field name="property_type_id"></field>
                    <field name="property_tag_ids" widget = "many2many_tags"  options="{'color_field': 'color'}" > </field>
                </tree>
            </field>
        </record>

        <record id="property_estate_view_search" model="ir.ui.view">
            <field name="name">property_estate.view.search</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <search string="">
                    <field name="selling_price"/>
                    <field name="living_area"/>
                   <!-- <filter name="selling_price" string="Selling price" domain="[('selling_price','=','provided_value')]"/>
                    <filter name="property_type_id" string="Type" domain="[('property_type_id','=','provided_value')]"/> -->
                    <field name="property_tag_ids" widget = "many2many_tags"  options="{'color_field': 'color'}"></field>
                    <filter string="Available" name="available" domain="[('state', 'in', ('New', 'Offer Received'))]"/>
                    <group expand="1" string="Group By">
                        <filter string="Postcode" name='postcode' context="{'group_by':'postcode'}"/>
                    </group>
                    <field name="living_area" string="Living Area" filter_domain="[('living_area', '>=', self)]"/>
                    
                </search>
            </field>
        </record>

</odoo>
