<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="estate_property.list">
      <field name="name">estate_property list</field>
      <field name="model">estate_property.estate_property</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
<!--           <field name="value"/>
          <field name="value2"/> -->
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="estate_property.action_window">
      <field name="name">estate_property window</field>
      <field name="res_model">estate_property.estate_property</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="estate_property.action_server">
      <field name="name">estate_property server</field>
      <field name="model_id" ref="model_estate_property_estate_property"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="estate_property" id="estate_property.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="estate_property.menu_1" parent="estate_property.menu_root"/>
    <menuitem name="Menu 2" id="estate_property.menu_2" parent="estate_property.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="estate_property.menu_1_list" parent="estate_property.menu_1"
              action="estate_property.action_window"/>
    <menuitem name="Server to list" id="estate_property" parent="estate_property.menu_2"
              action="estate_property.action_server"/>
  </data>
</odoo>