<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_property_tag" model="ir.actions.act_window">
        <field name="name">Property Tag</field>
        <field name="res_model">property.tag</field>
        <field name="view_mode">tree,form</field>
    </record>

        <menuitem
        id="property_tag_menu"
        name="Property Tags"
        groups="base.group_user"
        parent = "estate_property_menu"
        action = "action_property_tag"
        sequence="8"/>


        <record id="property_tag_view_form" model="ir.ui.view">
            <field name="name">property_tag.view.form</field>
            <field name="model">property.tag</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <field name="name"></field>
                            <field name="color" widget = "color_picker"></field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="property_tag_view_tree" model="ir.ui.view">
            <field name="name">property_tag.view.tree</field>
            <field name="model">property.tag</field>
            <field name="arch" type="xml">
                <tree  editable="bottom" string="">
                    <field name="name"  options="{'color_field': 'color'}"></field>
                    <field name="color" widget = "color_picker"></field>
                </tree>
            </field>
        </record>

        <record id="property_tag_view_search" model="ir.ui.view">
            <field name="name">property_tag.view.search</field>
            <field name="model">property.tag</field>
            <field name="arch" type="xml">
                <search string="">
                    <field name="name"  options="{'color_field': 'color'}"></field>
                    <field name="color" widget = "color_picker"></field>
                </search>
            </field>
        </record>

</odoo>