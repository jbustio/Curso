<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="tag_action" model="ir.actions.act_window">
        <field name="name">Tag</field>
        <field name="res_model">estate_property.tag</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="type_menu_root"
        name="Type"
        parent="real_estate_menu"
        />
    <menuitem
        id="tag_menu"
        name="Estate Tag"
        action="tag_action"
        parent="type_menu_root"
        sequence="10"/>
    <record 
        id="view_tree_types" 
        model="ir.ui.view"
    >
        <field name="name">Type List</field>
        <field name="model">estate_property.property.type</field>
        <field name="arch" type = "xml">
            <tree>
                <field 
                    name="sequence" 
                    widget="handle"
                />
                <field 
                    name="name"
                />
                <field 
                    name="property_ids"
                />
                <button 
                    name="%(estate_offer_action)d" 
                    type="action" 
                    class="oe_stat_button" 
                    icon="fa-book"
                    string="Offers"
                />
                    
            </tree>
        </field>
    </record>
    <record id="view_form_types" model="ir.ui.view">
        <field name="name">Type Form</field>
        <field name="model">estate_property.property.type</field>
        <field name="arch" type="xml">
            <form string="Types">
                <sheet>
                    <field name="name"/>
                    <field name="property_ids"/>
                </sheet>
            </form>
        </field> 
    </record>
    <record 
        id="type_action" 
        model="ir.actions.act_window">
        <field name="name">Property types</field>
        <field name="res_model">estate_property.property.type</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem
    id="property_type_menu"
    name="Property Type"
    action="type_action"
    parent="type_menu_root"
    sequence="10"/>
</odoo>
