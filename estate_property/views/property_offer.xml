<?xml version="1.0" encoding="utf-8"?>
<odoo>

<record id="property_offer_view_form" model="ir.ui.view">
            <field name="name">property_offer.view.form</field>
            <field name="model">property.offer</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <field name="price"></field>
                            <field name="status"></field>
                            <field name="partner_id"></field>
                            <field name="validity"></field>
                            <field name="date_deadline"></field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="property_offer_view_tree" model="ir.ui.view">
            <field name="name">property_offer.view.tree</field>
            <field name="model">property.offer</field>
            <field name="arch" type="xml">
                <tree string="">
                            <field name="price"></field>
                            <field name="status"></field>
                                <button 
                                    name="action_accept_offer" 
                                    type="object" 
                                    icon="fa-check"
                                    attrs="{'invisible': [('status','in', ['accepted', 'refused'])]}"
                                    />
                                <button 
                                    name="action_refuse_offer" 
                                    type="object" 
                                    icon="fa-times"
                                    attrs="{'invisible': [('status','in', ['accepted', 'refused'])]}"
                                    />
                            <field name="partner_id"></field>
                            <field name="property_id"></field>
                            <field name="validity"></field>
                            <field name="date_deadline"></field>
                </tree>
            </field>
        </record>
</odoo>