<?xml version="1.0" encoding="utf-8"?>
<odoo>

<record id="property_offer_view_form" model="ir.ui.view">
            <field name="name">property_offer.view.form</field>
            <field name="model">property.offer</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <field name="price"></field>
                            <field name="status"></field>
                            <field name="partner_id"></field>
                            <field name="property_id"></field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="property_offer_view_tree" model="ir.ui.view">
            <field name="name">property_offer.view.tree</field>
            <field name="model">property.offer</field>
            <field name="arch" type="xml">
                <tree string="">
                            <field name="price"></field>
                            <field name="status"></field>
                            <field name="partner_id"></field>
                            <field name="property_id"></field>
                </tree>
            </field>
        </record>
</odoo>