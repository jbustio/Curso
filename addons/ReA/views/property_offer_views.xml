<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="property_offer_view_tree" model="ir.ui.view">
        <field name="name">Offer</field>
        <field name="model">property.offer</field>
        <field name="arch" type="xml">
        <tree>
            <field name="price"/>
            <field name="partner_id"></field>
            <field name="status"></field>
            <button name="accept_offer" string="Accept"  type="object" icon="fa-check"/>
            <button name="refuse_offer" string="Refuse"  type="object" icon="fa-close"/>
            <field name="validity"></field>
            <field name="date_deadline"></field>
        </tree>
        </field>
    </record>

    <record id="property_offer_view_form" model="ir.ui.view">
        <field name="name">Property Offer</field>
        <field name="model">property.offer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="price"/>
                        <field name="partner_id"></field>
                        <field name="validity"></field>
                        <field name="date_deadline"></field>
                        <field name="status"></field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


</odoo>
