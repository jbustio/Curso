<odoo>
    <record id="real_estate_property_type_form_view" model="ir.ui.view">
        <field name="name">Real Estate Property Type form</field>
        <field name="model">real.estate.property.type</field>
        <field name="arch" type="xml">
            <form string="Real Estate Property Type">

                <sheet>

                    <div class="oe_button_box" name="button_box">
                        <button name="%(real_estate.real_estate_property_offer_action)d"
                                type="action"
                                context="{'search_default_expected': True}"
                                class="oe_stat_button"
                                icon="fa-money"
                                help="Total offers for this property type">
                            <field name="offer_count" widget="statinfo" string="Offers"/>
                        </button>
                    </div>

                    <div class="oe_edit_only">
                        <label for="name"/>
                    </div>
                    <h1>
                        <field name="name" class="mb16"/>

                    </h1>

                    <notebook>
                        <page string="Properties">
                            <field name="real_estate_property_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="expected_price"/>
                                    <field name="state"/>
                                </tree>

                            </field>
                        </page>

                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="real_estate_property_type_tree_view" model="ir.ui.view">
        <field name="name">Real Estate Property Type List</field>
        <field name="model">real.estate.property.type</field>
        <field name="arch" type="xml">
            <tree string="Real Estate Property Type">
                <field name="sequence" widget="handle"/>
                <field name="name"/>

            </tree>
        </field>
    </record>

    <record id="real_estate_property_type_action" model="ir.actions.act_window">
        <field name="name">Real Estate Property Types</field>
        <field name="res_model">real.estate.property.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="real_estate_settings_menu"
              parent="real_estate_menu"
              name="Settings"
              sequence="10"/>

    <menuitem id="real_property_type_menu"
          parent="real_estate_settings_menu"
          action="real_estate_property_type_action"
          sequence="10"/>
</odoo>