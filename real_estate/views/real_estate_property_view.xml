<odoo>
    <record id="real_estate_property_form_view" model="ir.ui.view">
        <field name="name">Real Estate Property form</field>
        <field name="model">real.estate.property</field>
        <field name="arch" type="xml">
            <form string="Real Estate Property">
                <header>
                    <!-- Buttons will go here -->
                    <button name="sell_property" type="object" class="oe_highlight"
                            string="Sold" confirm="Are you sure you want to sell this property?"
                            attrs="{'invisible':['|', ('id', '=', False), ('state', '!=', 'offer_accepted')]}"
                    />
                    <button name="cancel_property" type="object"
                            string="Cancel" confirm="Are you sure you want to cancel this property?"
                            attrs="{'invisible':['|', '|', ('id', '=', False), ('state', '=', 'sold'), ('state', '=', 'canceled')]}"
                    />
                    <field name="state" widget="statusbar"/>

                </header>
                <sheet>

                    <div class="oe_title mb32" >
                        <div class="oe_edit_only">
                            <label for="name"/>
                        </div>
                        <h1>
                            <field name="name" class="mb16"/>
                        </h1>
                        <h2>
                            <div class="oe_edit_only">
                                <label for="tag_ids"/>
                            </div>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </h2>
                    </div>

                    <group>
                        <group>
                            <field name="property_type_id"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="expected_price" options='{"type": "number", "step": 0.01}'/>
                            <field name="best_offer"/>
                            <field name="selling_price"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <group>
                                    <field name="description"/>
                                    <field name="bedrooms" options='{"type": "number"}'/>
                                    <field name="living_area" options='{"type": "number"}' />
                                    <field name="facades" options='{"type": "number"}'/>
                                    <field name="total_area"/>
                                    <field name="active"/>
                                    <field name="state" invisible="1"/>

                                </group>
                                <group>
                                    <field name="garage"/>
                                    <field name="garden"/>
                                    <field name="garden_area" attrs="{'invisible': [('garden', '=', False)]}" options='{"type": "number"}'/>
                                    <field name="garden_orientation" attrs="{'invisible': [('garden', '=', False)]}"/>
                                </group>
                            </group>
                        </page>
                        <page string="Offers">
                            <field name="offer_ids" attrs="{'readonly': ['|', '|',('state', '=', 'offer_accepted'), ('state', '=', 'sold'),   ('state', '=', 'canceled')]}"/>
                        </page>
                        <page string="Sale Info">
                            <group>
                                <field name="salesman_id"/>
                                <field name="buyer_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="real_estate_property_tree_view" model="ir.ui.view">
        <field name="name">Real Estate Property List</field>
        <field name="model">real.estate.property</field>
        <field name="arch" type="xml">
            <tree string="State Property" decoration-success="state=='offer_received' or state=='offer_accepted'" decoration-bf="state=='offer_accepted'"
                  decoration-muted="state=='sold'"
            >
                <field name="name" string="Title"/>
                <field name="state" invisible="1"/>
                <field name="property_type_id"/>
                <field name="postcode"/>
                <field name="date_availability" optional="hidden"/>
<!--                <field name="tag_ids" editable="1" widget="many2many_tags" options="{'color_field': 'color'}"/>-->
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
            </tree>
        </field>
    </record>

    <record id="real_estate_property_view_search" model="ir.ui.view">
        <field name="name">Real Estate Property Search</field>
        <field name="model">real.estate.property</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="property_type_id"/>
                <field name="living_area" filter_domain="[('living_area', '>=', self)]"/>
                <filter string="Available" name="available" domain="['|', ('state', '=', 'new'), ('state', '=', 'offer_received')]"/>
                <filter string="Best Deals" name="bestdeals" domain="[('expected_price', '=', 9000)]"/>
                <group expand="1" string="Group By">
                    <filter string="Bedrooms" name="bedrooms" context="{'group_by':'bedrooms', 'residual_visible':True}"/>
                    <filter string="Postcode" name="postcode" context="{'group_by':'postcode', 'residual_visible':True}"/>
                </group>

            </search>
        </field>
    </record>

    <record id="real_estate_action" model="ir.actions.act_window">
        <field name="name">Real Estate Properties</field>
        <field name="res_model">real.estate.property</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_available': True}</field>

    </record>

    <menuitem id="real_estate_menu" name="Real Estate"/>

    <menuitem id="real_estate_property_menu"
              parent="real_estate_menu"
              action="real_estate_action"
              sequence="10"/>
</odoo>