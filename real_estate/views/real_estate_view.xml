<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_form_house" model="ir.ui.view">
        <field name="name">House form</field>
        <field name="model">real_estate.real_estate</field>
        <field name="arch" type="xml">
            <form string="House"> 
            <sheet>
                <group name="group_top">
                <group name="group_left">
                    <field name="name"/>
                    <field name="description"/>
                    <field name="postcode"/>
                    <field name="date_availability"/>
                    <field name="expected_price" class="oe_inline"/>
                </group>
                <group name="group_right">
                    <field name="selling_price"/>
                    <field name="bedrooms"/>
                    <field name="living_area" class="oe_inline"/>
                    <field name="facades"/>
                    <field name="garage"/>
                    <field name="garden"/>
                    <field name="garden_area"/>
                    <field name="garden_orientation"/>
                    </group>
                </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_tree_house" model="ir.ui.view">
        <field name="name">Houses List</field>
        <field name="model">real_estate.real_estate</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description"/>
                <field name="postcode"/>
                <field name="selling_price"/>
                <field name="bedrooms"/>
                <field name="living_area" class="oe_inline"/>
                <field name="facades"/>
                <field name="garage"/>
                <field name="garden"/>
            </tree>
        </field>
    </record>
    <record id="view_search_house" model="ir.ui.view">
        <field name="name">House filters</field>
        <field name="model">real_estate.real_estate</field>
        <field name="arch" type="xml">
        <search>
            <field name="selling_price"/>
        
            <filter name="selling_price"
                    string="Inactive"
                    domain="[('selling_price','=','provided_value')]"/>
            
           
           
        </search>
         </field>
    </record>
</odoo>
