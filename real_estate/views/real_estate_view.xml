<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_form_house" model="ir.ui.view">
        <field name="name">House form</field>
        <field name="model">real_estate.real_estate</field>
        <field name="arch" type="xml">
            <form string="House"> 
            <header>
                <button name="sold" type="object" string="Sold"/>
                <button name="cancel" type="object" string="Cancel"/>
            </header>
            <sheet>
                <h1><field name="name"/></h1>
                <group name="group_top">
                <group name="group left">
                    <field name="state" widget="statusbar"/>
                    <field name="property_type_id" options="{'no_create_edit':True}"/>
                    <field name="postcode"/>    
                    <field name="date_availability"/>
                
                </group>
                <group name="group_right">
                    <field name="expected_price" class="oe_inline"/>
                    <field name="selling_price"/>
                    <field name="best_price"/>
                    
                    
                    <field name="garden_orientation"/>
                    </group>
                </group>
                <group name="group_bottom">
                   
                    <notebook>
                        <page string="Description">
                           
                            <p><b>Description </b><field name="description"/></p>                  
                            
                            <p><b>Tags </b><field name="tag_id" widget="many2many_tags" options="{'color_field':'color'}"/></p>
                            <p><b>Garage </b><field name="garage"/></p>
                            <p><b>Garden </b><field name="garden"/></p>
                            <field name="offer"/>
                            
                        </page>
                        <page  string="Buyer and seller">
                            <p><b>Salesperson </b><field name="salesperson"/></p>
                            <p><b>Buyer </b><field name="buyer"/></p>       
                        </page>
                        <page string="Measures and area">
                            <p><b>Bedroom </b><field name="bedrooms"/></p>
                            <p><b>Living Area </b><field name="living_area" class="oe_inline"/></p>
                            <p><b>Facades </b><field name="facades"/></p>
                            
                            <field name="garden_area"/>
                            <field name="total_area"/>
                        </page>
                    </notebook>
                    
                </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_tree_house" model="ir.ui.view">
        <field name="name">Houses List</field>
        <field name="model">real_estate.real_estate</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area" />
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability"/>
               
            </tree>
        </field>
    </record>
    
    <!-- <record id="type_view_tree_house" model="ir.ui.view">
        <field name="name">House Types</field>
        <field name="model">real_estate_property_type.real_estate_property_type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field> 
    </record> -->
    <record id="view_search_house" model="ir.ui.view">
        <field name="name">House filters</field>
        <field name="model">real_estate.real_estate</field>
        <field name="arch" type="xml">
        <search>
            <field name="selling_price"/>
            <field name="property_type_id"></field>
            <filter name="selling_price"
                    string="Selling price"
                    domain="[('selling_price','=','provided_value')]"/>
            <filter name="property_type_id"
                    string="Type"
                    domain="[('property_type_id','=','provided_value')]"/>
           
           
        </search>
         </field>
    </record>
</odoo>
