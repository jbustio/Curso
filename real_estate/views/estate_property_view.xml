<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_form_house" model="ir.ui.view">
        <field name="name">House form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="House"> 
                <header>
                    <button name="sold" type="object" string="Sold" states="Offer Accepted"/>
                    <button name="cancel" type="object" string="Cancel" states="Offer Accepted"/>
                    <field name="state" widget="statusbar"  statusbar_visible="Offer Accepted,New,Sold,Offer Received"/>
                </header>
                <sheet>
                    <h1><field name="name"/></h1>
                    <group name="group_top">
                        <group name="group left">
                            
                            <field name="property_type_id" options="{'no_create_edit':True}"/>
                            <field name="postcode"/>    
                            <field name="date_availability"/>
                
                        </group>
                        <group name="group_right">
                            <field name="expected_price" class="oe_inline"/>
                            <field name="selling_price"/>
                            <field name="best_price"/>
                    
                    
                        </group>
                    </group>
                    <group name="group_bottom">
                   
                        <notebook>
                            <page string="Description">

                                <p><b>Description </b><field name="description"/></p>                  
                                
                                <p><b>Tags </b><field name="tag_id" widget="many2many_tags" options="{'color_field':'color'}"/></p>
                                <p><b>Garage </b><field name="garage"/></p>
                                <p><b>Garden </b><field name="garden" /></p>
                                <p><b>Garden Area </b><field name="garden_area" attrs="{'invisible':[('garden','=',False)]}"/></p>
                                <p><b>Garden Orientation </b><field name="garden_orientation" attrs="{'invisible':[('garden','=',False)]}"/></p>
                                <p><b>Total Area </b><field name="total_area"/></p>
                                <field name="offer" attrs="{'readonly':['|',('state','=','Offer Accepted'),'|',('state','=','Sold'),('state','=','Canceled')]}"/>
                            
                            </page>
                            <page  string="Buyer and seller">
                                <p><b>Salesperson </b><field name="salesperson"/></p>
                                <p><b>Buyer </b><field name="buyer"/></p>       
                            </page>
                            <page string="Measures and area">
                                <p><b>Bedroom </b><field name="bedrooms"/></p>
                                <p><b>Living Area </b><field name="living_area" class="oe_inline"/></p>
                                <p><b>Facades </b><field name="facades"/></p>
                            
                            
                            </page>
                        </notebook>
                    
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_tree_house" model="ir.ui.view">
        <field name="name">Houses List</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree decoration-success="offer > 1" decoration-danger="state=='Canceled'" decoration-bf="state=='Offer Accepted'" decoration-muted="state=='Sold'">
                <field name="name"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area" />
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability" optional="1"/>
                <field name="offer" />
                <field name="state" />
            </tree>
        </field>
    </record>
    <record id="view_kanban_house" model="ir.ui.view">
        <field name="name">House Kanban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
        <kanban>
            <templates>
                <t t-name="kanban-box">
                    <div class="oe_kanban_global_click">
                        <field name="name"/>
                        <field name="description"/>                
                    </div>
                </t>
            </templates>
        </kanban>
        </field>
    </record>
    <!-- <record id="type_view_tree_house" model="ir.ui.view">
        <field name="name">House Types</field>
        <field name="model">real_estate_property_type.real_estate_property_type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field> 
    </record> -->
    <record id="view_search_house" model="ir.ui.view">
        <field name="name">House filters</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
        <search>
            <field name="selling_price"/>
            <field name="property_type_id"/>
            <field name="living_area"
                    string="Living area"
                    filter_domain="[('living_area','>=',self)]"/>
            
            
            <filter name="available" 
                    string="Available"
                    domain="[('state','=','New')]" />
            
            <filter name="selling_price"
                    string="Selling price"
                    domain="[('selling_price','=','provided_value')]"/>
            <filter name="property_type_id"
                    string="Type"
                    domain="[('property_type_id','=','provided_value')]"/>
           
           
        </search>
         </field>
    </record>
</odoo>
