<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_tree_types" model="ir.ui.view">
        <field name="name">Type List</field>
        <field name="model">estate.type</field>
        <field name="arch" type="xml">
            <tree>
                
                <field name="name"/>
                <field name="property_ids"/>
                <field name="offer_count"/>
                <field name="sequence" widget="handle"/>
            </tree>
        </field>
    </record>
    <record id="view_form_types" model="ir.ui.view">
    <field name="name">Type Form</field>
    <field name="model">estate.type</field>
    <field name="arch" type="xml">
    <form string="Types">
        <header>
            <button name="%(real_estate.estate_offer_action)d" icon="" type="action" string="Offers"/>
        </header>
        <sheet>
        <notebook>
            <page name="details" string="Details">
                <field name="name"/>
                <field name="property_ids"/>    
            </page>
        </notebook>
            
            
        </sheet>
    </form>
    </field> 
    </record>
</odoo>
