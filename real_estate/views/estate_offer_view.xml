<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_tree_offer" model="ir.ui.view">
    <field name="name">Offer List</field>
    <field name="model">estate.offer</field>
    <field name="arch" type="xml">
        <tree>
            <field name="price"/>
            
            <field name="validity"/>
            <field name="date_deadline" />
            <field name="partner_id"/>
            <field name="property_id"/>
            <button name="accept" type="object" icon="fa-check"/>
            <button name="refuse" type="object" icon="fa-close"/>
            <field name="status"/>
        </tree>
    </field>
    </record>
    <record id="view_form_offer" model="ir.ui.view">
    <field name="name">Offer Form</field>
    <field name="model">estate.offer</field>
    <field name="arch" type="xml">
        
        <form>
            <sheet>
            <field name="price"/>
            
            <field name="validity">Validity(days)</field>
            <field name="date_deadline" />
            <br></br>
            <field name="partner_id"/>
            <field name="property_id"/>
            
            <field name="status"/>
            </sheet>
        </form>
        
    </field>
    </record>

</odoo>
