<odoo>
    <record id="real_estate_property_offer_form_view" model="ir.ui.view">
        <field name="name">Real Estate Property Offer form</field>
        <field name="model">real.estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Real Estate Property Offer">
                <header>
                    <!-- Buttons will go here -->

                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="price"/>
                            <field name="partner_id"/>
                            <field name="status"/>
                            <field name="validity"/>
                            <field name="date_deadline"/>

                        </group>

                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="real_estate_property_offer_tree_view" model="ir.ui.view">
        <field name="name">Real Estate Property Offer List</field>
        <field name="model">real.estate.property.offer</field>
        <field name="arch" type="xml">
            <tree string="State Property" decoration-success="status=='accepted'" decoration-danger="status=='refused'" editable="top">
                <field name="price"/>
                <field name="partner_id"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                <field name="status" invisible="1"/>


                <button name="accept_offer" type="object"  icon="fa-check"
                        string="Accept" confirm="Are you sure you want to accept this offer?"
                        attrs="{'invisible':['|',('status', '=', 'accepted'), ('status', '=', 'refused')]}"/>
                <button name="refuse_offer" type="object" icon="fa-times"
                        string="Refuse" confirm="Are you sure you want to refuse this offer?"
                        attrs="{'invisible':['|',('status', '=', 'accepted'), ('status', '=', 'refused')]}"/>

            </tree>
        </field>
    </record>

    <record id="real_estate_property_offer_action" model="ir.actions.act_window">
        <field name="name">Real Estate Offers</field>
        <field name="res_model">real.estate.property.offer</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('property_type_id', '=', active_id)]</field>

    </record>

</odoo>