<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="applicants_action_view_tree" model="ir.ui.view">
        <field name="name">Applicants List</field>
        <field name="model">applicants.applicants</field>
        <field name="arch" type="xml">
            <tree
                >
                <field name="name"/>
                <field name="last_name1"/>
                <field name="last_name2"/>
                <field name="ci"/>
                <field name="address" />
                <field name="age"/>
                <field name="sex" />
                <field name="company_id" />
            </tree>
        </field>
    </record>

    <record id="view_search_house" model="ir.ui.view">
        <field name="name">Applicants filters</field>
        <field name="model">applicants.applicants</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="last_name1"/>
                <field name="last_name2"/>
                <field name="ci"/>
                <field name="address" />
                <field name="age"/>
                <field name="sex" />
                <filter 
                    name="technology_and_experience_id" 
                    string="Technology"
                    domain="[('technology_and_experience_id', '=', 'provided_value')]"
                    />
            </search>
        </field>
    </record>

    <record 
        id="applicants_action" 
        model="ir.actions.act_window"
    >
        <field name="name">Applicants</field>
        <field name="res_model">applicants.applicants</field>
        <field name="view_mode">tree,form,search</field>
    </record>



</odoo>
