<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate_property.view.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="EstateProperty">
                <header>
                    <button string="Cancel" name="action_cancel" type="object" class="oe_highlight"/>
                    <button string="Sold" name="action_sold" type="object" class="oe_highlight"/>
                </header>
                <sheet>
                <group>
                    <h1><field name="name"></field></h1>
                    <field name="tag_ids" widget="many2many_tags" options="{'color_field':'color'}"></field>
                    <field name="state" widget="statusbar"></field>
                </group>                  
                <group>   
                    <field name="property_type_id" widget="many2one_tags">Type</field>                 
                    <field name="description">Description</field>
                    <field name="date_availability">Date Availability</field>                     
                </group>
                <group>
                    <field name="postcode">Postcode</field>
                    <field name="expected_price">Expected Price</field>                    
                    <field name="selling_price">Selling Price</field>
                    <field name="bedrooms">Bedrooms</field>
                    <field name="best_price"></field>
                </group>   
                              
                <notebook>
                    <page name="description" string="Description">                        
                        <group>
                            <field name="living_area">Living Area</field>
                            <field name="facades">Facades</field>
                            <field name="garage">Garage</field>
                            <field name="garden">Garden</field>
                            <field name="garden_area" attrs="{'invisible':[('garden','=',False)]}">Garden Area</field>
                            <field name="garden_orientation" attrs="{'invisible':[('garden','=',False)]}">Garden Orientation</field>
                        </group>
                    </page>                    
                    <page name="info" string="Other Info">
                        <group name="info">
                            <field name="sales_person"></field>
                            <field name="buyer"></field>
                        </group>
                        
                    </page>
                    <page name="offert" string="Offert">
                        <field name="offer_ids" attrs="{'readonly': [('state','in',['o_ac','s','c'])]}">
                        <tree decoration-danger="status=='refused'" decoration-success="status=='accepted'">
                            <field name="price" string='Price'></field> 
                            <field name="partner_id" string='Partner'></field>
                            <field name="validity" string='Validity(days)'></field>
                            <field name="date_deadline" string='Dead line'></field>
                            <button icon='fa-check' name="action_accept" attrs="{'invisible': [('status','in', ['accepted', 'refused'])]}" type="object"/>
                            <button icon='fa-times' name="action_refuse" attrs="{'invisible': [('status','in', ['accepted', 'refused'])]}" type="object"/>
                            <field name="status" string='Status'></field>
                            
                        </tree>
                        </field>
                    </page>
                </notebook>
                
                    
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate_property.view.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree decoration-success="state == 'o_r'" decoration-bf="state=='o_ac'" decoration-muted="state=='s'">
                <field name="name"/>
                <field name="description" />
                <field name="tag_ids" widget="many2many_tags" options="{'color_field':'color'}"></field>
                <field name="expected_price" />
                <field name="date_availability"/>
                <field name="selling_price"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="facades"/>
                <field name="garage"/>
                <field name="garden"/>
                <field name="garden_area"/>
                <field name="garden_orientation"/>
                <field name="property_type_id" widget="many2one_tags"/>
                <field name="state"></field>
            </tree>
        </field>
    </record>

    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate_property.view.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Search">
                <field name="name"></field>
                <field name="garage"></field>
                <filter name="garage_filter" string="Have Garage" domain="[('garage', '=', 'True')]"/>
                <filter name="bedrooms" string="Gedrooms Groups" domain="[('bedrooms', '>', '1')]" context="{'group_by': 'bedrooms'}" />
                <filter name="Available"  string="Available"  domain="[('state','=','new')]"/>
            </search>
        </field>
    </record>
    
    <record id="offer_view_form" model="ir.ui.view">
        <field name="name">offer.view.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Offer">
            <sheet>
            <notebook>
                <page name="offer" string="Offers">
                    <group> 
                        <field name="price" string='Price'></field> 
                        <field name="partner_id" string='Partner'></field>
                        <field name="status" string='Status'></field>                        
                    </group>
                </page>
            </notebook>
            </sheet>  
               
            </form>
        </field>
    </record>

