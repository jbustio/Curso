<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>       
        <record id="technology_view_form" model="ir.ui.view">
            <field name="name">technology.view.form</field>
            <field name="model">company.technology</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <field name="name"></field>                   
                            <field name="years_experience"></field>                   
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="technology_view_tree" model="ir.ui.view">
            <field name="name">technology.view.tree</field>
            <field name="model">company.technology</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="name"></field>
                    <field name="candidate_ids" widget='many2one_tags'></field>
                    
                </tree>
            </field>
        </record>
        <record id="candidate_view_form" model="ir.ui.view">
            <field name="name">candidate.view.form</field>
            <field name="model">company.candidate</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <field name="name"></field>
                            <field name="surnames"></field>
                            <field name="ci"></field>
                        </group>
                        <group>
                            <field name="address"></field>
                            <field name="age"></field>
                            <field name="sex"></field>
                            
                        </group>
                        <group string='Tecnologias'>
                            <field name="technology_ids">
                                <tree>
                                    <field name="name"></field>
                                    <field name="years_experience"></field>
                                </tree>
                            </field>
                        </group>
                        
                        
                    </sheet>
                </form>
            </field>
        </record>

        <record id="candidate_view_tree" model="ir.ui.view">
            <field name="name">candidate.view.tree</field>
            <field name="model">company.candidate</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"></field>
                    <field name="surnames"></field>
                    <field name="ci"></field>
                    
                    <field name="address"></field>
                    <field name="age"></field>
                    <field name="sex"></field>
                    <field name="technology_ids">
                        <field name="name"></field>
                    </field>
                </tree>
            </field>
        </record>



        <record id="candidate_action" model="ir.actions.act_window">
            <field name="name">Candidatos </field>
            <field name="res_model">company.candidate</field>
            <field name="view_mode">tree,form,search</field>
        </record>
        
        <record id="technology_action" model="ir.actions.act_window">
            <field name="name">Tecnologias </field>
            <field name="res_model">company.technology</field>
            <field name="view_mode">tree,form,search</field>
        </record>
       
        
        <menuitem
            id="candidates_menu"
            name="Candidatos"
            action="candidate_action"
            sequence="10"/>
        <menuitem
            id="company_menu"
            name="Settings"
            parent="candidates_menu"
            sequence="10"/>
        <menuitem
            id="technology_menu"
            name="Tecnologias"
            parent="company_menu"
            action="technology_action"
            sequence="10"/>
        
    </data>
</odoo>
