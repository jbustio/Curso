<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_technology_candidate">
        <t t-foreach="docs" t-as="technology">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>
                            <span t-field="technology.name"/>
                        </h2>                         
                        
                        <table class="table">
                            <thead>
                                <tr>
                                <strong>
                                <th>Nombre</th>
                                <th>CI</th>
                                </strong>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="technology.candidate_ids" t-as="candidate">
                                    <td><span t-field="candidate.name"/></td>
                                    <td><span t-field="candidate.ci"/></td>
                                </t>
                                
                            </tbody>
                        </table>
                        
                    </div>
                </t>
            </t>
        </t>
    </template>

    <template id="report_candidate">
        <t t-foreach="docs" t-as="candidate">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>
                            <span t-field="candidate.name"/>
                            <span t-field="candidate.surnames"/>
                        </h2> 
                        <table class="table">
                            <thead>
                                <tr>
                                <strong>
                                <th>Tecnologia</th>
                                <th>Experiencia(AÃ±os)</th>
                                </strong>
                                </tr>
                            </thead>
                            <tbody>
                               <t t-set="technology" t-value="candidate.mapped('technology_ids')"/>                            
                                    <tr t-foreach="technology" t-as="tech">
                                    <td><span t-field="tech.name"/></td>
                                    <td><span t-field='tech.years_experience'/></td>
                                </tr>
                            </tbody>
                        </table>                        
                        
                        
                        
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>