<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_candidate">
        <t t-foreach="docs" t-as="candidate">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>
                            <span t-field="candidate.name" />
                        </h2>
                        <div name="expected_price">
                            <strong>Most Experience Technology: </strong>
                            <span t-field="candidate.most_experience_technology" />
                        </div>
                        <t t-set="technologies" t-value="candidate.mapped('technology_ids')" />
                        <br/>
                        <h4>Candidate Experience:</h4>
                        <br/>
                        <table class="table align-center">
                            <thead>
                                <tr>
                                    <th>Technology</th>
                
                                    <th>Years of Experience</th>
                                </tr>
                            </thead>
                            
                            <tbody>
                                <tr t-foreach="technologies" t-as="tech">
                                    <td>
                                        <span t-field="tech.technology_id.name" />
                                    </td>
                                    <td>
                                        <span t-field="tech.years" />
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>