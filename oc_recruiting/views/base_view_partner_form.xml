<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="base_view_partner_form" model="ir.ui.view">
        <field name="name">base.view.partner.form.inherit.oc.recruiting</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='contact_addresses']"
                position="before">

                <page string="Candidate Info" autofocus="autofocus">
                    <group>
                        <field name="last_name" />
                        <field name="ci" />
                        <field name="current_address" />
                        <field name="age" />
                        <field name="sex" />
                    </group>
                </page>

            </xpath>
            <!-- <xpath expr="//div[@class='o_address_format']/parent::group" position="attributes">
                <attribute name="invisible">0</attribute>
            </xpath>  -->
            <xpath expr="//page[@name='contact_addresses']" position="attributes">
                <attribute name="autofocus"></attribute>
            </xpath>
            
        </field>
    </record>
</odoo>