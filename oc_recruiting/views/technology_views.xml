<?xml version='1.0' encoding='utf-8'?>
<odoo>
  <!-- explicit list view definition -->
  <record model="ir.ui.view" id="oc_technology_list">
    <field name="name">Technology</field>
    <field name="model">oc.recruiting.technology</field>
    <field name="arch" type="xml">
      <tree editable="bottom">
        <field name="name" />
        <field name="sequence" widget="handle" readonly='1' />
      </tree>
    </field>
  </record>


  <!-- actions opening views on models -->
  <record id="oc_recruiting_technology_action" model="ir.actions.act_window">
    <field name="name">Technologies</field>
    <field name="res_model">oc.recruiting.technology</field>
    <field name="view_mode">tree,form</field>
  </record>

  <!-- Top menu item -->
 

</odoo>