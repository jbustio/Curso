<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- form for estate.property.offer -->
    <record id="estate_property_offer_form" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Property Offer">
                <group>
                        <field name="price" />
                        <field name="partner_id" />
                        <field name="status" />
                        <field name="validity" />
                        <field name="date_deadline" />
                </group>
                
            </form>
        </field>
    </record>
    <!-- estate- property offer tree -->
    <record id="estate_property_offer_tree" model="ir.ui.view">
        <field name="name">estate.property.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree string="Property Offer" decoration-success="status=='accepted'" decoration-warning="status=='refuse'">
                <field name="price" />
                <field name="partner_id" />
                <field name="validity" />
                <field name="date_deadline" />
                <field name='property_type_id' readonly='1'/>
                <field name="status" invisible='1'/>
                <button name="action_accept" type="object" icon="fa-check" help="Accept" attrs="{'invisible': ['|', ('status','==','accepted'), ('status','==','refuse')]}" />
                <button name="action_refuse" type="object" icon="fa-remove" attrs="{'invisible': ['|', ('status','==','accepted'), ('status','==','refuse')]}" />
            </tree>
        </field>
    </record>
</odoo>