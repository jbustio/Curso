<?xml version='1.0' encoding='utf-8'?>
<odoo>
  <!-- form for estate.property -->
  <record id="estate_property_form" model="ir.ui.view">
    <field name="name">estate.property.form</field>
    <field name="model">estate.property</field>
    <field name="arch" type="xml">
      <form string="Real Estate">
        <sheet>
          <div class="oe_title">
            <h1>
              <field name="name" />
            </h1>
            <field name="tags" widget="many2many_tags" />
          </div>
          <group>
            <group>
              <field name="property_type_id" />
              <field name="postcode" />
              <field name="date_availability" />
              <field name="expected_price" />
              <field name="selling_price" />
              <field name="bedrooms" />
            </group>
            <group>
              <field name="living_area" />
              <field name="facades" />
              <field name="garage" />
              <field name="garden" />
              <field name="garden_area" />
              <field name="garden_orientation" />
            </group>
          </group>
          <notebook>
            <page string="Description">
              <field name="description" />
            </page>
            <page string="Other Info">
             
            </page>
            
          </notebook>
        </sheet>
      </form>
    </field>
  </record>
  <!-- estate- property tree -->
  <record id="estate_property_tree" model="ir.ui.view">
    <field name="name">estate.property.tree</field>
    <field name="model">estate.property</field>
    <field name="arch" type="xml">
      <tree string="Real Estate" create="true" delete="true" edit="true">
        <field name="name" />
        <field name="description" />
        <field name="postcode" />
        <field name="date_availability" />
        <field name="expected_price" />
        <field name="selling_price" />
        <field name="bedrooms" />
        <field name="living_area" />
        <field name="facades" />
        <field name="garage" />
        <field name="garden" />
        <field name="garden_area" />
        <field name="garden_orientation" />
      </tree>
    </field>
  </record>


  <!-- Search view for "estate.property" -->
  <record id="estate_property_search" model="ir.ui.view">
    <field name="name">estate.property.search</field>
    <field name="model">estate.property</field>
    <field name="type">search</field>
    <field name="mode">primary</field>
    <field name="priority" eval="16" />
    <field name="active" eval="True" />
    <field name="arch" type="xml">
      <search string="Real Estate">
        <field name="name" />
        <field name="description" />
        <filter string="Available today" name="date_availability"
          domain="[('date_availability','=',context_today())]" />
      </search>
    </field>
  </record>
</odoo>