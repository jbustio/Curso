<?xml version='1.0' encoding='utf-8'?>
<odoo>
<!-- form for estate.property -->
  <record id="estate_property_type_form" model="ir.ui.view">
    <field name="name">estate.property.type.form</field>
    <field name="model">estate.property.type</field>
    <field name="arch" type="xml">
      <form string="Real Estate Type">
        <header>
          <button name="%(estate_property_offers_action)d" class="btn btn-lg oe_stat_button"
          icon="fa-money" type="action" attrs="{'invisible': [('offer_count','=',0),]}" >
          <field name="offer_count"/>
        </button>
      </header>
        <group>
          <field name="name" />
          <field name="sequence"/>
        </group>
      </form>
    </field>
  </record>
<!-- estate- property tree -->
  <record id="estate_property_type_tree" model="ir.ui.view">
    <field name="name">estate.property.tree</field>
    <field name="model">estate.property.type</field>
    <field name="arch" type="xml">
      <tree string="Real Estate Type" create="true" delete="true" edit="true">
        <field name="name" />
        <field name="sequence" widget="handle"/>
      </tree>
    </field>
  </record>


  <!-- Search view for "estate.property" -->
  <record id="estate_property_type_search" model="ir.ui.view">
    <field name="name">estate.property.search</field>
    <field name="model">estate.property.type</field>
    <field name="type">search</field>
    <field name="mode">primary</field>
    <field name="priority" eval="16" />
    <field name="active" eval="True" />
    <field name="arch" type="xml">
      <search string="Real Estate">
        <field name="name" />
        <!-- <field name="description" /> -->
        <!-- <filter string="Available today" name="date_availability" domain="[('date_availability','=',context_today())]"/>            -->
      </search>
    </field>
  </record>


</odoo>